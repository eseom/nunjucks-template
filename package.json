{
  "name": "jinja-family-template",
  "displayName": "Jinja Family Template",
  "description": "Formatting, Syntax Highlighting, Hover, and Snippets for Jinja family",
  "version": "0.5.2",
  "repository": {
    "type": "git",
    "url": "https://github.com/eseom/jinja-family-template"
  },
  "license": "MIT",
  "publisher": "eseom",
  "engines": {
    "vscode": "^1.19.0"
  },
  "categories": [
    "Programming Languages"
  ],
  "icon": "images/icon.png",
  "activationEvents": [
    "onLanguage:jinja-family"
  ],
  "main": "./out/extension",
  "contributes": {
    "configuration": {
      "title": "JinjaFamilyTemplate",
      "properties": {
        "jinjaFamilyTemplate.preserveEmptyLine": {
          "type": "number",
          "default": 0,
          "description": "empty lines number to keep at formatting"
        }
      }
    },
    "snippets": [
      {
        "language": "jinja-family",
        "path": "./assets/snippets/snippets.json"
      }
    ],
    "commands": [],
    "languages": [
      {
        "id": "jinja-family",
        "aliases": [
          "Jinja Family",
          "jinja"
        ],
        "extensions": [
          ".njk",
          ".twig",
          ".jinja"
        ],
        "configuration": "./assets/languages/configuration.json"
      }
    ],
    "grammars": [
      {
        "language": "jinja-family",
        "scopeName": "source.jinja-family",
        "path": "./assets/syntaxes/jinja-family.json"
      },
      {
        "language": "jinja-family",
        "scopeName": "source.html",
        "path": "./assets/syntaxes/html.json"
      },
      {
        "language": "jinja-family",
        "scopeName": "text.html.jinja-family",
        "path": "./assets/syntaxes/jinja-family-html.json"
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "postinstall": "node ./node_modules/vscode/bin/install",
    "test": "npm run compile && node ./node_modules/vscode/bin/test"
  },
  "devDependencies": {
    "@types/mocha": "^2.2.42",
    "@types/node": "^7.10.14",
    "ts-node": "^10.7.0",
    "typescript": "^4.6.3",
    "vscode": "^1.1.37"
  },
  "dependencies": {
    "prettydiff": "^101.2.6"
  }
}