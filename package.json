{
  "name": "nunjucks-template",
  "displayName": "Nunjucks Template",
  "description": "Formatting, Syntax Highlighting, Hover, and Snippets for Nunjucks",
  "version": "0.4.2",
  "repository": {
    "type": "git",
    "url": "https://github.com/eseom/nunjucks-template"
  },
  "publisher": "eseom",
  "engines": {
    "vscode": "^1.19.0"
  },
  "categories": [
    "Programming Languages"
  ],
  "icon": "images/icon.png",
  "activationEvents": [
    "onLanguage:nunjucks"
  ],
  "main": "./out/extension",
  "contributes": {
    "commands": [],
    "languages": [
      {
        "id": "nunjucks",
        "aliases": [
          "Nunjucks",
          "nunjucks",
          "njk"
        ],
        "extensions": [
          ".nunjucks",
          ".nunjs",
		  ".nunj",
		  ".nj",
		  ".njk",
		  ".html",
		  ".htm",
		  "template",
		  ".tmpl",
		  ".tpl"
        ],
        "configuration": "./assets/languages/configuration.json"
      }
    ],
    "grammars": [
      {
        "language": "nunjucks",
        "scopeName": "source.njk",
        "path": "./assets/syntaxes/njk.json"
      },
      {
        "language": "nunjucks",
        "scopeName": "text.html.njk",
        "path": "./assets/syntaxes/njk-html.json"
      }
    ],
    "snippets": [
      {
        "language": "nunjucks",
        "path": "./assets/snippets/snippets.json"
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "postinstall": "node ./node_modules/vscode/bin/install",
    "test": "npm run compile && node ./node_modules/vscode/bin/test"
  },
  "devDependencies": {
    "@types/mocha": "^2.2.42",
    "@types/node": "^7.0.43",
    "ts-node": "^9.1.1",
    "typescript": "^2.6.1",
    "vscode": "^1.1.37"
  },
  "dependencies": {
    "prettydiff": "^101.2.6"
  }
}
