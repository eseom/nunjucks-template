{
  "name": "jinja-family",
  "scopeName": "source.jinja-family",
  "comment": "Jinja Family Template",
  "fileTypes": ["njk", "twig", "jinja"],
  "foldingStartMarker": "({%\\s*(block|filter|for|if|macro|raw))",
  "foldingStopMarker": "({%\\s*(endblock|endfilter|endfor|endif|endmacro|endraw)\\s*%})",
  "patterns": [
    { "include": "#frontMatter" },
    {
      "begin": "({%)\\s*(raw)\\s*(%})",
      "captures": {
        "1": {
          "name": "entity.other.jinja-family.delimiter.tag"
        },
        "2": {
          "name": "keyword.control.jinja-family"
        },
        "3": {
          "name": "entity.other.jinja-family.delimiter.tag"
        }
      },
      "end": "({%)\\s*(endraw)\\s*(%})",
      "name": "comment.block.jinja-family.raw"
    },
    {
      "begin": "{#-?",
      "captures": [
        {
          "name": "entity.other.jinja-family.delimiter.comment"
        }
      ],
      "end": "-?#}",
      "name": "comment.block.jinja-family"
    },
    {
      "begin": "{{-?",
      "captures": [
        {
          "name": "entity.other.jinja-family.delimiter.variable"
        }
      ],
      "end": "-?}}",
      "name": "comment.block.jinja-family",
      "patterns": [
        {
          "include": "#expression"
        }
      ]
    },
    {
      "begin": "{%-?",
      "captures": [
        {
          "name": "entity.other.jinja-family.delimiter.tag"
        }
      ],
      "end": "-?%}",
      "name": "comment.block.jinja-family",
      "patterns": [
        {
          "include": "#expression"
        }
      ]
    },
    {
      "begin": "----?",
      "captures": [
        {
          "name": "entity.other.jinja-family.delimiter.comment"
        }
      ],
      "end": "-?---",
      "name": "comment.block.jinja-family"
    }
  ],
  "repository": {
    "frontMatter": {
      "begin": "\\A-{3}\\s*$",
      "contentName": "meta.embedded.block.frontmatter",
      "patterns": [
        {
          "include": "source.yaml"
        }
      ],
      "end": "(^|\\G)-{3}|\\.{3}\\s*$"
    },
    "escaped_char": {
      "match": "\\\\x[0-9A-F]{2}",
      "name": "constant.character.escape.hex.jinja-family"
    },
    "escaped_unicode_char": {
      "captures": {
        "1": {
          "name": "constant.character.escape.unicode.16-bit-hex.jinja-family"
        },
        "2": {
          "name": "constant.character.escape.unicode.32-bit-hex.jinja-family"
        },
        "3": {
          "name": "constant.character.escape.unicode.name.jinja-family"
        }
      },
      "match": "(\\\\U[0-9A-Fa-f]{8})|(\\\\u[0-9A-Fa-f]{4})|(\\\\N\\{[a-zA-Z ]+\\})"
    },
    "expression": {
      "patterns": [
        {
          "captures": {
            "1": {
              "name": "keyword.control.jinja-family"
            },
            "2": {
              "name": "variable.other.jinja-family.block"
            }
          },
          "match": "\\s*\\b(block)\\s+([a-zA-Z_][a-zA-Z0-9_]*)\\b"
        },
        {
          "captures": {
            "1": {
              "name": "keyword.control.jinja-family"
            },
            "2": {
              "name": "variable.other.jinja-family.filter"
            }
          },
          "match": "\\s*\\b(filter)\\s+([a-zA-Z_][a-zA-Z0-9_]*)\\b"
        },
        {
          "captures": {
            "1": {
              "name": "keyword.control.jinja-family"
            },
            "2": {
              "name": "variable.other.jinja-family.test"
            }
          },
          "match": "\\s*\\b(is)\\s+([a-zA-Z_][a-zA-Z0-9_]*)\\b"
        },
        {
          "captures": {
            "1": {
              "name": "keyword.control.jinja-family"
            }
          },
          "match": "(?<=\\{\\%-|\\{\\%)\\s*\\b([a-zA-Z_][a-zA-Z0-9_]*)\\b(?!\\s*[,=])"
        },
        {
          "match": "\\b(and|else|if|in|import|not|or|recursive|with(out)?\\s+context)\\b",
          "name": "keyword.control.jinja-family"
        },
        {
          "match": "\\b(true|false|none)\\b",
          "name": "constant.language.jinja-family"
        },
        {
          "match": "\\b(loop|super|self|varargs|kwargs)\\b",
          "name": "variable.language.jinja-family"
        },
        {
          "match": "[a-zA-Z_][a-zA-Z0-9_]*",
          "name": "variable.other.jinja-family"
        },
        {
          "match": "(\\+|\\-|\\*\\*|\\*|//|/|%)",
          "name": "keyword.operator.arithmetic.jinja-family"
        },
        {
          "captures": {
            "1": {
              "name": "punctuation.other.jinja-family"
            },
            "2": {
              "name": "variable.other.jinja-family.filter"
            }
          },
          "match": "(\\|)([a-zA-Z_][a-zA-Z0-9_]*)"
        },
        {
          "captures": {
            "1": {
              "name": "punctuation.other.jinja-family"
            },
            "2": {
              "name": "variable.other.jinja-family.attribute"
            }
          },
          "match": "(\\.)([a-zA-Z_][a-zA-Z0-9_]*)"
        },
        {
          "begin": "\\[",
          "captures": [
            {
              "name": "punctuation.other.jinja-family"
            }
          ],
          "end": "\\]",
          "patterns": [
            {
              "include": "#expression"
            }
          ]
        },
        {
          "begin": "\\(",
          "captures": [
            {
              "name": "punctuation.other.jinja-family"
            }
          ],
          "end": "\\)",
          "patterns": [
            {
              "include": "#expression"
            }
          ]
        },
        {
          "begin": "\\{",
          "captures": [
            {
              "name": "punctuation.other.jinja-family"
            }
          ],
          "end": "\\}",
          "patterns": [
            {
              "include": "#expression"
            }
          ]
        },
        {
          "match": "(\\.|:|\\||,)",
          "name": "punctuation.other.jinja-family"
        },
        {
          "match": "(==|<=|=>|<|>|!=)",
          "name": "keyword.operator.comparison.jinja-family"
        },
        {
          "match": "=",
          "name": "keyword.operator.assignment.jinja-family"
        },
        {
          "begin": "\"",
          "beginCaptures": [
            {
              "name": "punctuation.definition.string.begin.jinja-family"
            }
          ],
          "end": "\"",
          "endCaptures": [
            {
              "name": "punctuation.definition.string.end.jinja-family"
            }
          ],
          "name": "string.quoted.double.jinja-family",
          "patterns": [
            {
              "include": "#string"
            }
          ]
        },
        {
          "begin": "'",
          "beginCaptures": [
            {
              "name": "punctuation.definition.string.begin.jinja-family"
            }
          ],
          "end": "'",
          "endCaptures": [
            {
              "name": "punctuation.definition.string.end.jinja-family"
            }
          ],
          "name": "string.quoted.single.jinja-family",
          "patterns": [
            {
              "include": "#string"
            }
          ]
        },
        {
          "begin": "@/",
          "beginCaptures": [
            {
              "name": "punctuation.definition.regexp.begin.jinja-family"
            }
          ],
          "end": "/",
          "endCaptures": [
            {
              "name": "punctuation.definition.regexp.end.jinja-family"
            }
          ],
          "name": "string.regexp.jinja-family",
          "patterns": [
            {
              "include": "#simple_escapes"
            }
          ]
        }
      ]
    },
    "simple_escapes": {
      "captures": {
        "1": {
          "name": "constant.character.escape.newline.jinja-family"
        },
        "10": {
          "name": "constant.character.escape.tab.jinja-family"
        },
        "11": {
          "name": "constant.character.escape.vertical-tab.jinja-family"
        },
        "2": {
          "name": "constant.character.escape.backlash.jinja-family"
        },
        "3": {
          "name": "constant.character.escape.double-quote.jinja-family"
        },
        "4": {
          "name": "constant.character.escape.single-quote.jinja-family"
        },
        "5": {
          "name": "constant.character.escape.bell.jinja-family"
        },
        "6": {
          "name": "constant.character.escape.backspace.jinja-family"
        },
        "7": {
          "name": "constant.character.escape.formfeed.jinja-family"
        },
        "8": {
          "name": "constant.character.escape.linefeed.jinja-family"
        },
        "9": {
          "name": "constant.character.escape.return.jinja-family"
        }
      },
      "match": "(\\\\\\n)|(\\\\\\\\)|(\\\\\\\")|(\\\\')|(\\\\a)|(\\\\b)|(\\\\f)|(\\\\n)|(\\\\r)|(\\\\t)|(\\\\v)"
    },
    "string": {
      "patterns": [
        {
          "include": "#simple_escapes"
        },
        {
          "include": "#escaped_char"
        },
        {
          "include": "#escaped_unicode_char"
        }
      ]
    }
  }
}
